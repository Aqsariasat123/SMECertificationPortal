# Server Configuration
NODE_ENV=production
PORT=5001

# Database Configuration (Use your production database URL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&sslmode=require"

# JWT Configuration (IMPORTANT: Use a strong, unique secret in production!)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Frontend URL (for email links - use your production domain)
FRONTEND_URL=https://your-domain.com

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
